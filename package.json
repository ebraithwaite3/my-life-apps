{
  "name": "my-life-apps",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "functions"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**",
      "**/@react-native-community/**",
      "**/react-native-*",
      "**/react-native-*/**"
    ]
  },
  "scripts": {
    "workout": "cd apps/workout-app && npm start",
    "calendar": "cd apps/calendar-app && npm start",
    "organizer": "cd apps/organizer-app && npm start",
    "functions:serve": "cd functions && npm run serve",
    "functions:deploy": "cd functions && npm run deploy",
    "firebase:logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase": "^12.5.0"
  }
}
